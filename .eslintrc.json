{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "plugins":[
        "flowtype"
    ],
    "parser": "babel-eslint",
    "settings": {
        "import/ignore": [".(scss|less|css)$"]   
    },
    "rules": {
        "indent": 0,
        "linebreak-style": 0,
        "quotes": [2, "single"],
        "semi": [2, "never"],
        "no-alert": 0,
        "no-multi-spaces": 1,
        "no-shadow": 2,
        "no-tabs":0,
        "no-underscore-dangle": 0,
        "no-use-before-define": 0,
        "no-undef": 0,
        "no-unexpected-multiline": 2,
        "no-unused-expressions": 2,
        "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
        "no-trailing-spaces": 0,
        "no-var": 0,
        "no-new" : 0,
        "prefer-const" : 1,
        "import/no-unresolved" : 0,
        "no-param-reassign" : 0,
        "no-cond-assign" : 0,
        "consistent-return" : 0,
        "no-continue" : 0,
        "no-bitwise" : 0,
        "one-var" : [2, {"uninitialized" : "consecutive"}],
        "prefer-template" : 0,
        "no-console" : 0,
        "prefer-arrow-callback" : 0,
        "no-useless-escape" : 0,
        "padded-blocks" : 0,
        "space-before-function-paren" : 1,
        "no-plusplus" : 0,
        "eol-last" : 0,
        "comma-dangle" : 1,
        "comma-spacing" : 1,
        "import/prefer-default-export" : 0,
        "prefer-destructuring" : 0,
        "object-curly-newline" : 0,
        "one-var-declaration-per-line" : 0,
        "no-multi-assign" : 0,
        "arrow-parens" : 0
    }
}